<div class="mt-4 mb-2">
  <h2 class="mb-5">Nova Categoria</h2>
  <% if @categories.errors.any? %>
    <div class="alert alert-danger mt-2">
      <%= t('errors.template.header', model: RecipeType.model_name.human, count: @categories.errors.count) %>
    </div>
  <% end %>
  <div class="card border-0 shadow-lg">
    <div class="card-body">
      <%= form_with model: @categories do |f| %>
        <%= f.label :name, "Nome", class: 'form-label' %>
        <%= f.text_field :name, class: "form-control" %>
        <%= f.submit "Salvar", class:'btn btn-primary my-3' %>
      <% end %>
    </div>
  </div>
</div>
